<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/learning_progress"
    android:weightSum="1">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_weight="0.08"
        android:max="100"
        android:progress="0"
        android:visibility="visible"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text='Training "": iteration 0 from 0'
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/progress_label"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_below="@+id/progressBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="After completing the training, you will receive the result of processing the picture by e-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_label"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/progress_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Cancel training"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/cancel_button"
        android:layout_weight="0.01"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>